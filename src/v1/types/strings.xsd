<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            targetNamespace="http://github.com/elen-star/schema/src/v1/types/strings.xsd"
            elementFormDefault="qualified">

    <xsd:simpleType name="AsciiString">
        <xsd:restriction base="xsd:string">
            <xsd:pattern value="^[\u0000-\u007F]+$"/>
        </xsd:restriction>
    </xsd:simpleType>

    <xsd:simpleType name="UTF8String">
        <xsd:restriction base="xsd:string"/>
    </xsd:simpleType>
</xsd:schema>